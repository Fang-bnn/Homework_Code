/* pages/userIndex-option/userIndex-option.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.itemSet{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:100%;
  height: 130rpx;
  border-bottom: 1rpx solid #E9E9E9;
  background-color: white;
}

.icon{
  width:50rpx;
  position:absolute;
  right: 60rpx;
}

.itemText{
  line-height: 80rpx;
  margin-left: 40rpx;
}

.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position:absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 0rpx;
}

.username{
  position:absolute;
  right: 60rpx;
  color:gray;
}

.quit{
  align-items: center;
  width:50%;
  height:70rpx;
  position:fixed;
  bottom:80rpx;
  border-radius: 5px;
  text-align: center;
  background-color: red;
}

.quit text{
  line-height: 67rpx;
  color:white;
}

.allItem{
  width:100%;
  box-shadow:0 0 70px 0 #E9E9E9;
}

.input-section{
  border-bottom:1px solid black;
}

.nameInput{
  font-size: 43rpx;
  margin-bottom: 20rpx;
  color:black;
}

page{
  background-color: white;
}
