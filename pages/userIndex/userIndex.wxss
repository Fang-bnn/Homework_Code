/* pages/userIndex/userIndex.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 1334rpx;
}

.head{
  width:30%;
  margin-top:150rpx;
}

.username{
  margin-top: 30rpx;
  font-size: 45rpx;
  margin-bottom: 40rpx;
}

.itemSet{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:100%;
  height: 100rpx;
  border-top: 1rpx solid #E9E9E9;
  border-bottom: 1rpx solid #E9E9E9;
  background-color: white;
}

.icon{
  width:50rpx;
  margin-left: 15rpx;
}

.itemText{
  line-height: 80rpx;
  margin-left: 20rpx;
}

.blank{
  height:30rpx;
}

.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position:absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 0rpx;
}

.allItem{
  width:100%;
